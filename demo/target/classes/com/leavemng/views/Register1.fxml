<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leavemng.controllers.RegisterController" spacing="10" alignment="center">
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="phoneField" promptText="Phone"/>
    <TextField fx:id="departementField" promptText="departement"/>
    <TextField fx:id="birthDateField" promptText="Birth Date"/>
    <TextField fx:id="annualBalanceField" promptText="Annual Balance"/>
    <Button fx:id="registerButton" text="Register" onAction="#handleRegisterButtonAction"/>
    <Label fx:id="errorLabel"/>
</VBox>